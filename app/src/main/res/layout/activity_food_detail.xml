<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.foodlist.FoodDetailActivity">


    <TextView
        android:id="@+id/tv_detail_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:text="Sop Kambing Susu Betawi"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_detail_food_kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_food_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="245 KCal"
        android:textSize="15sp"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_food_kcal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Category : "
           android:textColor="@color/black"
           android:textStyle="bold"
           android:layout_marginLeft="8dp"
           />

       <TextView
           android:id="@+id/tv_detail_food_category"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Sehat"
           android:textColor="@color/black"
           android:layout_marginLeft="8dp"
           android:layout_marginTop="8dp"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Cooking Time : "
           android:layout_marginTop="16dp"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:layout_marginLeft="8dp"
           />



       <TextView
           android:id="@+id/tv_detail_food_cooking_time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="30 Minute"
           android:textColor="@color/black"
           android:layout_marginLeft="8dp"
           android:layout_marginTop="8dp"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Bahan-bahan masakan : "
           android:layout_marginTop="16dp"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:layout_marginLeft="8dp"
           />

       <TextView
           android:id="@+id/tv_detail_food_step_by_step"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="30 Minute"
           android:textColor="@color/black"
           android:layout_marginLeft="8dp"
           android:layout_marginTop="8dp"
           android:gravity="start"
           android:textAlignment="viewStart"
           android:layout_marginRight="8dp"
           android:hyphenationFrequency="full"
           android:justificationMode="inter_word"
           android:lineSpacingExtra="4dp"
           android:textSize="14sp" />



   </LinearLayout>





    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
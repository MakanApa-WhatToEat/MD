<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.camera.CameraMainActivity">


    <ProgressBar
        android:id="@+id/pb_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:translationZ="90dp"
        />




    <ImageView
        android:id="@+id/iv_image_preview"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/image_view_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_place_holder" />



    <Button
        android:id="@+id/btn_camerax"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        android:text="Camera"
        android:layout_marginStart="40dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/iv_image_preview"
        app:layout_constraintStart_toStartOf="@id/iv_image_preview"
        android:layout_marginTop="32dp"

        />


    <Button
        android:id="@+id/btn_galery"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        android:text="Galery"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="@id/iv_image_preview"
        app:layout_constraintTop_toBottomOf="@id/iv_image_preview"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="32dp"
       />



    <Button
        android:id="@+id/button_add"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="20dp"
        android:text="Scan"
        app:layout_constraintTop_toBottomOf="@id/iv_image_preview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
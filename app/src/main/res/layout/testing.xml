<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_register_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="550dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />


    <LinearLayout
        android:id="@+id/ll_username_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_register_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_register_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="6dp"
            android:hint="Username"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username Can't be Empty"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp"
            android:textColor="#F30D0D"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_email_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_username_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_register_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="0dp"
            android:hint="Email"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/ic_email_grey"
            android:paddingLeft="10dp"
            android:drawablePadding="6dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Can't be Empty"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp"
            android:textColor="#F30D0D"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_password_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_email_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">


       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           >
           <EditText
               android:id="@+id/et_register_password"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:paddingLeft="10dp"
               android:paddingRight="10dp"
               android:hint="Password"
               android:inputType="textPassword"
               android:background="@drawable/edit_text_background"
               android:drawableLeft="@drawable/ic_lock"
               android:drawablePadding="6dp" />

           <ImageButton
               android:id="@+id/btn_toggle_password"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignEnd="@+id/et_register_password"
               android:layout_alignBottom="@+id/et_register_password"
               android:layout_alignTop="@+id/et_register_password"
                android:layout_marginRight="10dp"
               android:background="@android:color/transparent"
               android:src="@drawable/visibility_grey" />
       </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Can't be Empty"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp"
            android:textColor="#F30D0D"
            />

    </LinearLayout>



    <Button
        android:id="@+id/btn_register_reg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/ll_password_container"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/register_button_name"

        />



    <ProgressBar
        android:id="@+id/pb_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:translationZ="90dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>